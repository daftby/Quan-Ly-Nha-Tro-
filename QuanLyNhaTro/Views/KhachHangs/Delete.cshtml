        </dt>

        <dd>
            @Html.DisplayFor(model => model.QueQuan)
        </dd>

        <dt>
            Ngày Sinh
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgaySinh)
        </dd>

        <dt>
            Tên Phòng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DSPhong.TenPhong)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa Thông Tin " class="btn btn-default" /> |
            @Html.ActionLink("Quay Lại Trang Chủ ", "Index")
        </div>
    }
</div>
