@model IEnumerable<QuanLyNhaTro.Models.KhachHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thông Tin Khách Hàng</h2>

<p>
    @Html.ActionLink("Thêm Mới 1 Khách Hàng", "Create")
</p>
<table class="table">
    <tr>

        <th>
            Họ Tên
        </th>
        <th>
            Chứng Minh Nhân Dân
        </th>
        <th>
            Nghề Nghiệp
        </th>
        <th>
            Quê Quán
        </th>
        <th>
            Ngày Sinh
        </th>
        <th>
            Mã Phòng
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.HoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CMND)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgheNghiep)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QueQuan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgaySinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaPhong)
            </td>
            <td>
                @Html.ActionLink("Sửa Thông Tin Khách Hàng", "Edit", new { id = item.MaKH }) |
                @Html.ActionLink("Thông Tin Chi Tiết Khách Hàng", "Details", new { id = item.MaKH }) |
                @Html.ActionLink("Xóa Thông Tin Khách Hàng", "Delete", new { id = item.MaKH })
            </td>
        </tr>
    }

</table>
